{
  "version": 2,
  "builds": [
    { "src": "/api/index.php", "use": "@vercel/php" },
    { "src": "/public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/(css|js)/(.*)",
      "dest": "public/$1/$2"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_NAME": "Locadora",
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_KEY": "base64:DBBCq/TDavBUaUifETCME8f88v2gNupt88itjWYS0i0=",
    "APP_URL": "https://locadora.vercel.app",  
    "DB_CONNECTION": "sqlite",
    "DB_DATABASE": "/tmp/database.sqlite"
  }
}
